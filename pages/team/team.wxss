/* pages/team/team.wxss */

.teamcard {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 15rpx;
  margin: 20rpx;
  background-color: #f6f6f6;
  border-radius: 10rpx;
  position: relative;
}

.more {
  position: absolute !important;
  right: 30rpx;
}

.teamname {
  font-weight: bold;
  font-size: 1.3rem;
}

.teamlabel {
  font-size: 0.8rem;
  margin-right: 20rpx;
}

.subtitle {
  margin: 30rpx 50rpx 0;
  font-size: 0.9rem;
  font-weight: bold;
  color: #bbbec4;
}

.card {
  margin: 20rpx 20rpx;
  border-radius: 15rpx;
  box-shadow: 0 0 20rpx #dddee1;
  padding: 20rpx 30rpx;
}

.delete {
  /* opacity: 0.3; */
  box-shadow: 0 0 20rpx #e9eaec;
  color: #dddee1;
}

.titlebox {
  display: flex;
  justify-content: space-between;
}

.title {
  font-size: 1.2rem;
  font-weight: bold;
}

.detail {
  font-size: 0.8rem;
  color: #80848f;
  text-overflow: ellipsis;
  text-align: justify;
  /* white-space: nowrap; */
  overflow: hidden;
  margin: 20rpx 0;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.van-swipe-cell-right {
  width: 65px;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #dd5246;
  font-weight: bold;
  /* background-color: #dd5246; */
}

.buttonarea {
  display: flex;
  position: fixed;
  bottom: 0;
  width: 720rpx;
  height: 120rpx;
  justify-content: flex-end;
}
