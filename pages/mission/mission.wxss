/* pages/mission/mission.wxss */

Page {
  min-height: 100vh;
  position: absolute;
  top: 0;
}

.finish {
  position: absolute;
  right: 80rpx;
  top: 30rpx;
  width: 180rpx;
  height: 180rpx;
}

.detail {
  margin: 40rpx 60rpx;
}

.label {
  font-weight: bold;
  color: #bbbec4;
  font-size: 0.8rem;
  margin-bottom: 10rpx;
}

.name {
  text-align: justify;
  word-break: break-all;
}

.tip {
  display: flex;
  align-items: center;
  margin: 20rpx 0;
}

.whos {
  text-align: center;
  font-weight: bold;
  margin-right: 20rpx;
  min-width: 3rem;
}

.date {
  font-weight: normal;
  font-size: 0.6rem;
  color: #80848f;
}

.content {
  text-align: justify;
  word-break: break-all;
  padding: 20rpx;
  font-size: 0.9rem;
  border-radius: 15rpx;
  background-color: #f6f6f6;
  /* max-width:  */
}

.van-swipe-cell-left {
  width: 40px;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #dd5246;
  font-weight: bold;
  /* background-color: #dd5246; */
}

.finishbutton {
  margin: 40rpx 60rpx;
  /* height: 80rpx; */
  position: absolute;
  bottom: 0;
  width: 630rpx;
}
